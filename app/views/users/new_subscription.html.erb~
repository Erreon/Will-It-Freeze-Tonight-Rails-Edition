<%= form_for @user, :url => { :action => 'subscribe' }, :html => {:class=> 'new_subscription_form', :id => 'new_subscription_form' } do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %> 
  <div class="clearfix">
    <%= f.label :subscription %>
    <div class="input">
      <%= f.select(:subscription, [['Subscription', 1]]) %>
    </div>
  </div>
  <div class="clearfix">
    <%= label_tag :card_number, "Credit Card Number" %>
    <div class="input">
      <%= text_field_tag :card_number, nil, name: nil %>
    </div>
  </div>
  <div class="clearfix">
    <%= label_tag :card_code, "Security Code on Card (CVV)" %>
    <div class="input">
      <%= text_field_tag :card_code, nil, name: nil %>
    </div>
  </div>
  <div class="clearfix">
    <%= label_tag :card_month, "Card Expiration" %>
    <div class="input">
      <%= select_month nil, {add_month_numbers: true}, {name:nil, id: "card_month"} %>
      <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: nil, id: "card_year"} %>
    </div>
  </div>
  <%= f.hidden_field :stripe_card_token %>
  <%= f.hidden_field :username %>
  <div id="stripe_error">
    <noscript>JavaScript is not enabled and is required for this form. First enable it in your web browser settings.</noscript>
  </div>
  <div class="actions"><%= f.submit "Subscribe", :class => "btn primary large" %> <%= link_to "Nevermind", root_url, :class => 'btn small' %></div>
  
<% end %>
